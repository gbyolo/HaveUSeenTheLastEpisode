<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

    </style>

    <!-- CardView theme -->
    <style name="CardStyleEp" parent="CardView.Dark">
        <item name="android:background">@color/cardview_background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>
    <style name="CardStyleInfo" parent="CardView.Dark">
        <item name="android:background">@color/info_cv_background</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>


    <style name="CalendarFABstyle" parent="Widget.Design.FloatingActionButton">
        <item name="colorAccent">@color/rounded_share</item>
    </style>

</resources>
